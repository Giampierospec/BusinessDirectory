@model BusinessDirectory.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Registrar";
}
@section Css{
    <link rel="stylesheet" href="~/css/login.css" />
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="jumbotron jb-blank text-center">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-muted"></div>
                <legend><h2>Regístrese</h2></legend>
                <div class="form-group input-group">
                    <label asp-for="Email" class="input-group-addon"><i class="fa fa-envelope-open"></i> Email</label>
                    <input asp-for="Email" type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-muted"></span>
                </div>
                <div class="form-group input-group">
                    <label asp-for="Name" class="input-group-addon"><i class="fa fa-user"></i> Nombre</label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-muted"></span>
                </div>

                <div class="form-group input-group">
                    <label asp-for="LastName" class="input-group-addon"><i class="fa fa-user"></i> Apellido</label>
                    <input asp-for="LastName" type="text" class="form-control" />
                    <span asp-validation-for="LastName" class="text-muted"></span>
                </div>
                <div class="form-group input-group">
                    <label asp-for="PhoneNumber" class="input-group-addon"><i class="fa fa-phone"></i> Teléfono</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-muted"></span>
                </div>
                
                <div class="form-group input-group">
                    <label asp-for="Password" class="input-group-addon"><i class="fa fa-lock"></i> Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-muted"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i> Registrarse</button>
                </div>
            </form>
        </div>
    </div>
</div>