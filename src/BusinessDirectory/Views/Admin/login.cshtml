@model BusinessDirectory.ViewModels.LoginViewModel

@{ 
    ViewBag.Title = "Login";
}
@section Css{
    <link rel="stylesheet" href="~/css/login.css" />
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="jumbotron jb-blank text-center">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly"></div>
                <legend><h2>Ingrese aquí</h2></legend>
                <div class="form-group input-group">
                    <label asp-for="UserName" class="input-group-addon"><i class="fa fa-user"></i> Usuario</label>
                    <input asp-for="UserName" type="text" class="form-control"/>
                    <span asp-validation-for="UserName" class="text-muted"></span>
                </div>
                <div class="form-group input-group">
                    <label asp-for="Password" class="input-group-addon"><i class="fa fa-lock"></i> contraseña</label>
                    <input asp-for="Password" type="password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-muted"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i> Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>